<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <p>Add your the meal you want for your flight
    <select>
      <% meals.forEach(meal => { %>
        <option><%= meal.name%></option>
      <% }) %>
    </select>
  </p>
  <form id="add-meal-form" action="/meals" method="POST">
    <label for="meal-name-input">Meal Name: </label>
    <input type="text" name="name" id="meal-name-input">
    <button type="submit">Add Meal</button>
  </form>
</main>

<%- include('../partials/footer') %>