<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include('../partials/nav') %>
<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="">Airline:</label>
    <select name="airline" id="airline-field">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="">Airport:</label>
    <select name="airport" id="airport-field">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN" selected>DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flightNo-field">FlightNo:</label>
    <input type="number" name="flightNo" id="flightNo-field" min="0" max="9999">
    <label for="departs-field">Departs:</label>
    <input type="datetime-local" name="departs" id="departs-field" value="<% departsDt %>">
    <button type="submit">Add Flight</button>
  </form>
</main>





<%- include('../partials/footer') %>